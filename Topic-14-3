#include <stdio.h>
#include <locale.h>
#include <stdlib.h>
#include <math.h>

int main ()
{
    char *locale = setlocale(LC_ALL, "");
    int n;
    int a;
    int answer = 0;
    printf("Введите N: ");
    scanf("%d", &n);
    for(int k = 1; answer < n; k++)
    {
        answer += k;
        a = k;
    }
    printf("Сумма - %d \n", answer);
    printf("K = %d", a);
    return 0;
}
